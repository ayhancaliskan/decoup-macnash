                    <a href="/" class="navbar-brand logo mr-4">
                        <span role="img" aria-label="Logo of My Website" title="My Website">
                            <img src="/web/image/website/1/logo/My%20Website?unique=0e596b3" class="img img-fluid" alt="My Website" loading="lazy" />
                        </span>
                    </a>
                    <t t-call="website.navbar_toggler">
                        <t t-set="_toggler_class" t-value="'ml-auto'" />
                    </t>
                    <div id="top_menu_collapse" class="collapse navbar-collapse order-last order-lg-0" aria-expanded="false">
                        <t t-call="website.navbar_nav">
